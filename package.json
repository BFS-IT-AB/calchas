{
  "name": "calchas",
  "version": "0.7.0-alpha",
  "description": "Calchas PWA Weather App with Push Notifications, Dual APIs, Favorites, Maps, Alerts",
  "main": "app.js",
  "scripts": {
    "start": "node dev/tools/http-server.js",
    "dev": "http-server -p 8000 -c-1",
    "push-server": "node dev/tools/push-server.js",
    "push-demo": "node dev/tools/push-demo.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:browser": "http-server dev/tests/ -p 9000",
    "lint": "eslint js/ --fix",
    "build": "echo 'Production-ready structure - no build needed'",
    "predeploy": "npm test && npm run lint"
  },
  "dependencies": {
    "@rive-app/canvas": "^2.32.2",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "weather",
    "pwa",
    "app",
    "push-notifications",
    "offline"
  ],
  "author": "BFS IT Team",
  "license": "MIT"
